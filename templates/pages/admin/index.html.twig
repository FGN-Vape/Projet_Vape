{% extends 'base.html.twig' %}

{% block title %}GN Vape - Panel Admin{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}

    <h1>Panel Administrateur</h1>

    {% for produit in produits %}
        {% set nomProduit = produit.name %}
        {% set prixProduit = produit.price %}
        {% set imgProduit = produit.img %}

        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <div class="col mb-5">
                        <div
                                class="card h-100">
                            <!-- Product image-->
                            <img
                                    class="card-img-top" src={{ imgProduit }} alt="..."/>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div
                                        class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">{{ nomProduit }}</h5>
                                    <!-- Product price-->
                                    {{ prixProduit }}â‚¬
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-info" href={{ path('updateProduct', { id: produit.id })}}>Modifier</a>
                                    <a class="btn btn-danger" href={{ path('removeProduct', { id: produit.id })}}>Supprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            </div></section>
    {% endfor %}

    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        <a href="/admin/ajoutProduit" class="btn btn-primary">Ajout Produit</a>
    </div>


{% endblock %}